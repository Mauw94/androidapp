<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.EditPlanetActivity">

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="name"
        android:inputType="text"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/edit_mass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_name"
        android:layout_alignStart="@+id/edit_name"
        android:layout_below="@+id/edit_name"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="mass"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_mass"
        android:layout_alignStart="@+id/edit_mass"
        android:layout_below="@+id/edit_mass"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="temperature"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_temp"
        android:layout_alignStart="@+id/edit_temp"
        android:layout_below="@+id/edit_temp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="distance from star"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_diameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="diameter"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/edit_distance"
        android:layout_alignStart="@+id/edit_distance" />

    <EditText
        android:id="@+id/edit_rota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_diameter"
        android:layout_alignStart="@+id/edit_diameter"
        android:layout_below="@+id/edit_diameter"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="rotation speed"
        android:inputType="text" />

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Save changes"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/edit_rota"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>